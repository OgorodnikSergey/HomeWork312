<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >



        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:backgroundTint="@android:color/black"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:textStyle="bold"
            android:typeface="sans" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="94dp"
        android:layout_height="55dp"
        android:layout_below="@+id/tvResult"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:text="ะก"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnProcent"
        android:layout_width="94dp"
        android:layout_height="55dp"
        android:layout_below="@+id/tvResult"
        android:layout_marginStart="1dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/btnClear"
        android:layout_weight="1"
        android:text="%"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnZnak"
        android:layout_width="94dp"
        android:layout_height="55dp"
        android:layout_below="@+id/tvResult"
        android:layout_marginStart="1dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/btnDevide"
        android:layout_weight="1"
        android:text="+/-"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnDevide"
        android:layout_width="94dp"
        android:layout_height="55dp"
        android:layout_below="@+id/tvResult"
        android:layout_marginStart="1dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/btnProcent"
        android:layout_weight="1"
        android:text="/"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnMultiple"
        android:layout_width="94dp"
        android:layout_height="55dp"
        android:layout_below="@+id/btnDevide"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/linearLayout1"
        android:layout_weight="1"
        android:text="*"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="94dp"
        android:layout_height="55dp"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/linearLayout2"
        android:layout_weight="1"
        android:text="-"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="94dp"
        android:layout_height="55dp"
        android:layout_below="@+id/btnMinus"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/linearLayout3"
        android:layout_weight="1"
        android:text="+"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnRavno"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/btnPlus"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/linearLayout4"
        android:layout_weight="1"
        android:text="="
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="287dp"
        android:layout_height="55dp"
        android:layout_below="@+id/btnProcent"
        android:layout_marginLeft="0pt"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0pt">

        <Button
            android:id="@+id/btnSeven"
            android:layout_width="94dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btnEight"
            android:layout_width="94dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btnNine"
            android:layout_width="94dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="24sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="287dp"
        android:layout_height="55dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="0pt"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0pt">

        <Button
            android:id="@+id/btnFour"
            android:layout_width="94dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btnFive"
            android:layout_width="94dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btnSix"
            android:layout_width="94dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="24sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="287dp"
        android:layout_height="55dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginLeft="0pt"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0pt">

        <Button
            android:id="@+id/btnOne"
            android:layout_width="94dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btnTwo"
            android:layout_width="94dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="24sp"></Button>

        <Button
            android:id="@+id/btnFree"
            android:layout_width="94dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="24sp"></Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="188dp"
        android:layout_height="55dp"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginLeft="0pt"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0pt">

        <Button
            android:id="@+id/btnZero"
            android:layout_width="94dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="24sp"></Button>

        <Button
            android:id="@+id/btnPoint"
            android:layout_width="94dp"
            android:layout_height="55dp"
            android:layout_alignEnd="@+id/linearLayout4"
            android:layout_weight="1"
            android:text="."
            android:textSize="24sp"></Button>

    </LinearLayout>
</RelativeLayout>